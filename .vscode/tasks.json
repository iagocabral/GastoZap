{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run FastAPI",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python -m uvicorn main:app --reload",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python -m pytest",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
